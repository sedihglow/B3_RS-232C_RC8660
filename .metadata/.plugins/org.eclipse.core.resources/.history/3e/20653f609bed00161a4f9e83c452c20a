@ This program will use a RS-232C driver to make speach come out of an RC
@ systems 8660 coice synthesizer.
@
@ File name: main_p1_part1.s
@ Board: Beagle Bone Black
@ Written by: James Ross

.text
.global MESSAGE
.global CHAR_PTR
.global _start
_start:
.equ CMD_CHAR,	 0x01 @ Ctrl+A, used at start of commands
.equ DELIM_CHAR, 0x0D @ Used at end of input to talker
@********************** START _start *******************************************
INIT_STACK:
	LDR SP, =SVC_STACK
	ADD SP, SP, #0x1000 @ point to top of stack
	CPS #0x12			@ Switch to IRQ mode
	
	LDR SP, =IRQ_STACK
	ADD SP, SP, #0x1000
	CPS #0x13			@ Switch back to SVC mode
	
INIT_PIN_MAP:
	BL _init_pinMap
	
INIT_CLOCKS:
	BL _init_clocks

INIT_UART4:
	BL _init_uart4
	
INIT_8660:
	BL _init_syth_8660
	
INIT_INTERRUPT:
	BL _init_interrupt

INIT_GPIO:
	BL _init_gpio
	
WAIT_LOOP:
	B WAIT_LOOP

.data
.align 4
	SVC_STACK:
		.rept 1024
			.word 0x0000
		.endr
	IRQ_STACK:
		.rept 1024
			.word 0x0000
		.endr
.align 4
	MESSAGE:
		.byte CMD_CHAR 
		.ascii "7O"  @ Voice of Robo Robert
		
		.byte CMD_CHAR  
		.ascii "0V"	 @ Set volume 0 of 9 (lowest setting, still loud)
		.byte CMD_CHAR
		.ascii "4S"	 @ Speech rate reduced by 1 from default 5
		
		.ascii "10"	
		.byte CMD_CHAR
		.ascii "15Y"  @ delay 1second
	/*	
		.byte CMD_CHAR
		.ascii "15Y"
		.ascii "9"	
		
		.byte CMD_CHAR
		.ascii "15Y"
		.ascii "8"	
		
		.byte CMD_CHAR
		.ascii "15Y"
		.ascii "7"
	*/
		
		.byte 0x0D
.align 4
	CHAR_PTR:
		.word MESSAGE
.end
@@@@@@@@@@ EOF @@@@@@@@@@