@ This program will use a RS-232C driver to make speach come out of an RC
@ systems 8660 coice synthesizer.
@
@ File name: main_p1_part1.s
@ Board: Beagle Bone Black
@ Written by: James Ross

.text
.global _start
_start:
@********************** EQU DEFINITIONS ****************************************
@********************** START _start *******************************************
STACK_INIT:
	LDR R13, =STACK
	ADD R13, R13, #0x1000 @ point to top of stack
	CPS #0x12			@ Switch to IRQ mode
	
@	LDR SP, =IRQ_STACK
@	ADD SP, SP, #0x1000
	CPS #0x13			@ Switch back to SVC mode

INIT_PIN_MAP:
	BL _init_pinMap
	
INIT_CLOCKS:
	BL _init_clocks
	
INIT_GPIO:
	BL _init_gpio

INIT_UART4:
	BL _init_uart4
	
INIT_8660:
	BL _init_syth_8660
	
@INIT_TIMER3:
@		_init_timer3
	
INIT_INTERRUPT:
	BL _init_interrupt

WAIT_LOOP:
	B WAIT_LOOP

.data
.align 4
	/*IRQ_STACK:
		.rept 1024
			.word 0x0000
		.endr */
	STACK:
		.rept 1024
			.word 0x0000
		.endr
.end
@@@@@@@@@@ EOF @@@@@@@@@@